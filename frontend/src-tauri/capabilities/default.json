{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "deep-link:default",
    "core:window:allow-set-focus",
    "dialog:default",
    "fs:default",
    "fs:allow-app-write",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}